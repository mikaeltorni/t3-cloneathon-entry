# Copy this file to .env and fill in your actual values

# OpenRouter API Configuration
OPENROUTER_API_KEY=sk-or-v1-your-key-here

# Server Configuration  
PORT=3000
NODE_ENV=development

# CORS Configuration
# Development origins (comma-separated)
DEVELOPMENT_ORIGINS=http://localhost:3000,http://localhost:5173

# Production origins (set in production environment)
# PRODUCTION_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Firebase Configuration (Client-side - for frontend)
FIREBASE_API_KEY=your-firebase-api-key
FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your-messaging-sender-id
FIREBASE_APP_ID=your-firebase-app-id

# Firebase Admin SDK Configuration (Server-side - for backend)
FIREBASE_CLIENT_EMAIL=your-service-account-client-email
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour-private-key-here\n-----END PRIVATE KEY-----" 

# CORS Configuration
# Development origins (comma-separated)
DEVELOPMENT_ORIGINS=http://localhost:3000,http://localhost:5173

# Production origins (set in production environment)
PRODUCTION_ORIGINS=https://your-repo-name-production.up.railway.app/,https://your-repo-name-production.up.railway.app/