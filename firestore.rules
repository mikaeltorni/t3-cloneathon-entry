rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only access their own data under /users/{userId}
    match /users/{userId} {
      // Basic user document access
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // User's chat threads under /users/{userId}/chats/{chatId}
      match /chats/{chatId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
        
        // Messages within chats under /users/{userId}/chats/{chatId}/messages/{messageId}
        match /messages/{messageId} {
          allow read, write: if request.auth != null && request.auth.uid == userId;
        }
      }
    }
    
    // Explicitly deny all other access to any documents not matching above patterns
    match /{document=**} {
      allow read, write: if false;
    }
  }
} 